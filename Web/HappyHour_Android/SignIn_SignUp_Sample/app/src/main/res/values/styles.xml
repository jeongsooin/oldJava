<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAlertDialogStyle" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <declare-styleable name="SequenceLayout">
        <attr name="progressForegroundColor" format="color"/>
        <attr name="progressBackgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SequenceStep">
        <attr name="anchor" format="string"/>
        <attr name="anchorTextAppearance" format="reference"/>
        <attr name="title" format="string"/>
        <attr name="titleTextAppearance" format="reference"/>
        <attr name="subtitle" format="string"/>
        <attr name="subtitleTextAppearance" format="reference"/>
        <attr name="active" format="boolean"/>
    </declare-styleable>

    <style name="SequenceLayout">
        <item name="progressForegroundColor">@color/colorPrimary</item>
        <item name="progressBackgroundColor">@color/default_progress_background</item>
    </style>

    <style name="SequenceStep">
        <item name="anchorTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

</resources>
